{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "noEmitHelpers": false,
    "target": "ES5",
    "outDir": "build/"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
    "./src/config.ts",
    "./src/index.ts",
    "./src/log.ts",
    "./src/server.ts",
    "./typings/browser.d.ts",
    "./typings/browser/ambient/node/index.d.ts",
    "./typings/main.d.ts",
    "./typings/main/ambient/node/index.d.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./typings/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
